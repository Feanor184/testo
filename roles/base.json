{
  "name": "base",
  "description": "common for all",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "authorization": {
      "sudo": {
        "include_sudoers_d": "true"
      }
    },
    "chef_client": {
      "interval": "300",
      "log_file": "client.log",
      "logrotate": {
        "frequency": "daily",
        "rotate": "7"
      },
      "splay": "10"
    },
    "ntp": {
      "apparmor_enabled": false
    },
    "openssh": {
      "server": {
        "subsystem": "sftp /usr/lib/openssh/sftp-server"
      }
    }
  },
  "override_attributes": {
    "authorization": {
      "sudo": {
        "groups": [
          "sudo"
        ]
      }
    }
  },
  "run_list": [
    "recipe[apt]",
    "recipe[chef-client::config]",
    "recipe[chef-client::init_service]",
    "recipe[chef-client::delete_validation]",
    "recipe[helpers-express42]",
    "recipe[lvm]",
    "recipe[ntp]",
    "recipe[openssh]",
    "recipe[postfix::default-server]",
    "recipe[rsyslog]",
    "recipe[ssh_known_hosts]",
    "recipe[sudo]",
    "recipe[sysctl]",
    "recipe[user::data_bag]"
  ]
}
